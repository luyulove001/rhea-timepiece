<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.tatans.rhea.countdowntimer">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.DEVICE_POWER"/>

    <application
        android:name=".CountDownApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CountDownTimerActivity"
            android:label="@string/countdown"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/setting"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CountDownSettingActivity"
            android:label="@string/countdown_set"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntervalSettingActivity"
            android:label="@string/interval_set"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomActivity"
            android:label="@string/custom"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModelActivity"
            android:label="@string/model_set"
            android:screenOrientation="portrait" />
    </application>

</manifest>
